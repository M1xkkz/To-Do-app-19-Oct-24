<h1 class="title"><%= @category.name %> - Tasks</h1>

<!-- แสดงงานที่ยังไม่เสร็จ -->
<div class="task-section">
  <h2 class="section-title">Incomplete Tasks</h2>
  <ul class="task-list">
    <% @tasks.each do |task| %>
      <% if task.incomplete? %>
        <li class="task-item">
          <span class="task-name"><%= task.name %></span>
          <div class="task-buttons">
            <%= button_to "Complete", complete_task_path(task), method: :patch, class: "btn btn-complete" %>
            <%= button_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete" %>
            <%= link_to "Edit", edit_task_path(task), class: "btn btn-edit" %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<!-- แสดงงานที่เสร็จแล้ว -->
<div class="task-section">
  <h2 class="section-title">Complete Tasks</h2>
  <ul class="task-list">
    <% @tasks.each do |task| %>
      <% if task.complete? %>
        <li class="task-item complete-task">
          <span class="task-name"><%= task.name %></span>
          <div class="task-buttons">
            <%= button_to "Incomplete", incomplete_task_path(task), method: :patch, class: "btn btn-incomplete" %>
            <%= button_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete" %>
            <%= link_to "Edit", edit_task_path(task), class: "btn btn-edit" %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<style>
  /* ตั้งค่าสำหรับโครงสร้างและตัวหนังสือทั่วไป */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f7fa;
    margin: 0;
    padding: 20px;
  }

  .title {
    text-align: center;
    font-size: 2.5rem;
    color: #34495e;
    margin-bottom: 2rem;
  }

  /* ตั้งค่าสำหรับส่วนของ Tasks */
  .task-section {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.8rem;
    color: #3498db;
    margin-bottom: 1rem;
    text-align: center;
  }

  /* จัดการแสดงผลของรายการ Tasks */
  .task-list {
    list-style: none;
    padding: 0;
  }

  .task-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    margin-bottom: 10px;
    border-radius: 8px;
    background-color: #ecf0f1;
    transition: background-color 0.3s ease;
  }

  .task-item.complete-task {
    background-color: #d1f7c4;
  }

  .task-item:hover {
    background-color: #dfe6e9;
  }

  .task-name {
    font-size: 1.2rem;
    color: #2c3e50;
  }

  /* ปุ่มสำหรับงาน */
  .task-buttons {
    display: flex;
    gap: 10px;
  }

  .btn {
    padding: 8px 12px;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s ease;
    text-decoration: none;
    color: white;
  }

  /* ปุ่มต่างๆ */
  .btn-complete {
    background-color: #27ae60;
  }

  .btn-complete:hover {
    background-color: #2ecc71;
  }

  .btn-incomplete {
    background-color: #e67e22;
  }

  .btn-incomplete:hover {
    background-color: #d35400;
  }

  .btn-delete {
    background-color: #e74c3c;
  }

  .btn-delete:hover {
    background-color: #c0392b;
  }

  .btn-edit {
    background-color: #2980b9;
  }

  .btn-edit:hover {
    background-color: #3498db;
  }
</style>
